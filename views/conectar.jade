extend layout
block content
	div(class="container")
		form(class="form-signin", role="form", method="post")
			h2(class="form-signin-heading") Conéctate:
			input(type="text",class="form-control",placeholder="Cuenta", name="user_id" required autofocus)
			input(type="password",class="form-control",placeholder="Contraseña", name="pass" required)
			div(class="checkbox") 
				<br>
				button(class="btn btn-log btn-primary btn-block", type="submit") Conectar 
	
		