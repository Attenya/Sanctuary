<!DOCTYPE html>
<html>
  <head>
    <title>El Santuario</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/signin.css">
   
  </head>
  <body>
    <header>
         <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar-brand">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">El Santuario</a>
                </div>
                <div id="navbar" class="navbar-collpase collpase">
                    <ul class="nav navbar-nav">
                    <li><a href="/" id="indice">Indice</a></li>
                    <li><a href="/" id="secundario">Secundario</a></li>
                    <% if(user) {%>
                    <% if(user.range >= 1) {%>
                    <li><a href="#" id="administracion">Administraci√≥n</a></li>
                    <% } %>
                    <% } %>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <% if (user) { %>
                        <li><a href='JavaScript:void(0);' class='dropdown-toggle' data-toggle='dropdown' id='profile'><%= user.user_id %><span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#" class="perfil"><span class="glyphicon glyphicon-user">Perfil</span></a></li>
                                <li><a href="/desconectar"><span class="glyphicon glyphicon-log-out">Desconectar</span></a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li><a href="/conectar" id="login"><span class="glyphicon glyphicon-log-in"> Conectar</span></a></li>
                        <li><a href="/registrar" class="login" id="register"><span class="glyphicon glyphicon-user">Registrar</span></a></li>
                    <% } %>
                </ul>
                </div>
            </div>
         </nav>


        
    </header>
    <%- body %>
     <script src="/socket.io/socket.io.js"></script>
    <script src="/javascript/jquery.min.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="/javascripts/prueba.js"></script>
    <script src="/javascripts/selector_web.js"></script>
    <script src="/data/DataCharacters.js"></script>
    <script>
    $('.dropdown-toggle').dropdown();
                     <% if (user) { %>
var usuario = new Object();
    usuario.user_id = "<%= user.user_id %>";
    usuario.mail = "<%= user.mail %>";
    usuario.created_at = "<%= user.created_at %>";
    usuario.badges = "<%= user.badges %>";
    usuario.range = "<%= user.range %>";
    usuario.bando = "<%= user.bando %>";
    usuario.avatar = "<%= user.avatar %>";
    usuario.characters = "<%= user.characters %>";
    <% } else {%>
var usuario = null;
     <% } %>   
    $('[data-toggle="popover"]').popover({trigger: 'hover', 'placement': 'left'});
    </script>
  </body>
</html>